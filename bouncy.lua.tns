-- bouncy.lua
local x, y = 160, 120
local dx, dy = 2, 1.5
local w, h = 20, 20

function on.paint(gc)
    gc:fillRect(x, y, w, h)
end

function on.timer()
    x = x + dx
    y = y + dy
    if x < 0 or x + w > 320 then dx = -dx end
    if y < 0 or y + h > 240 then dy = -dy end
    platform.window:invalidate()
end

timer.start(0.1)
